<h1><%=@merchant.name%></h1>

<p><a href="/merchants/<%=@merchant.id%>/edit">Edit Merchant</a></p>
<p><form action="/merchants/<%=@merchant.id%>/delete" method="POST">
  <input type="submit" value="Delete merchant">
</form></p>
<% total = 0 %>
<% for transaction in @transactions %>
<p>Date: <%=transaction.transaction_date%></p>
<p>Time: <%=transaction.transaction_time%></p>
<p>Amount: <%=transaction.currency_gbp%></p>
<p>Tag: <%=transaction.tag.name%></p>
<p><a href="/transactions/<%=transaction.id%>">More info</a></p>
<hr />
<% end %>
<p>Total: <%=Transaction.gbp(@total)%></p>
