<h1><%=@merchant.name%></h1>

<p><a href="/merchants/<%=@merchant.id%>/edit">Change name</a></p>
<p><form action="/merchants/<%=@merchant.id%>/delete" method="POST">
  <input type="submit" value="Delete merchant">
</form></p>

<% if @transactions != [] %>
<table>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Amount</th>
    <th>Tag</th>
    <th> </th>
  </tr>
  <% for transaction in @transactions %>
    <tr>
      <td><%=transaction.transaction_date%></td>
      <td><%=transaction.transaction_time%></td>
      <td><%=transaction.gbp%></td>
      <td><a href="/tags/<%=transaction.tag.id%>"><%=transaction.tag.name%></a></td>
      <td><a href="/transactions/<%=transaction.id%>">More info</a></td>
    </tr>
  <% end %>
</table>
<p>Total: <%=Transaction.gbp(@total)%></p>
<% else %>
<p>No transactions have been recorded for <%=@merchant.name%>.</p>
<% end %>
