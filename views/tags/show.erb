<h1><%=@tag.name.capitalize%></h1>

<p><a href="/tags/<%=@tag.id%>/edit">Edit Tag</a></p>
<p><form action="/tags/<%=@tag.id%>/delete" method="POST">
  <input type="submit" value="Delete tag">
</form></p>

<% for transaction in @transactions %>
<p>Date: <%=transaction.transaction_date%></p>
<p>Time: <%=transaction.transaction_time%></p>
<p>Amount: <%=transaction.currency_gbp%></p>
<p>Merchant: <a href="/merchants/<%=transaction.merchant.id%>"><%=transaction.merchant.name%></a></p>
<p><a href="/transactions/<%=transaction.id%>">edit or delete transaction</a></p>
<hr />
<% end %>
<p>Total: <%=Transaction.gbp(@total)%></p>
