<h1>Add transaction:</h1>

<form action="/transactions" method="POST">

  <label for="transaction-pounds">Amount: Â£</label>
  <input type="number" min="0" id="transaction-pounds" name="pounds" value="<%=@transaction.pounds()%>">.
  <input type="number" min="0" max="99" id="transaction-pence" name="pence" value="<%=@transaction.pounds()%>">p
  <label for="transaction-tags">Tag: </label>
  <select name="tag_id" id="transaction-tags">
    <% for tag in @tags%>
    <option <%= "selected" if tag.name == @transaction.tag.name%> value="<%=tag.id%>"><%=tag.name%></option>
    <%end%>
  </select>

  <label for="transaction-merchants">Merchant: </label>
  <select name="merchant_id" id="transaction-merchants">
    <% for merchant in @merchants%>
    <option <%= "selected" if merchant.name == @transaction.merchant.name%> value="<%=merchant.id%>"><%=merchant.name%></option>
    <%end%>
  </select>

  <label for="transaction-date">Date:</label>
  <input type="text" id="transaction-date" name="transaction_date">

  <label for="transaction-time">Time:</label>
  <input type="text" id="transaction-time" name="transaction_time">

  <input type="submit" value="Add Transaction">

</form>
